{
  "compilerOptions": {
    "target": "ES2020",               // Usar ES2020 para aproveitar as funcionalidades mais novas.
    "module": "ESNext",               // Usar módulos ES para aproveitar a compatibilidade com bundlers modernos (Vite).
    "outDir": "./dist",               // Diretório de saída para os arquivos compilados (gerado pelo Vite)
    "rootDir": "./src",               // Diretório raiz onde os arquivos TypeScript estão localizados
    "strict": true,                   // Ativa todas as verificações estritas de tipo
    "esModuleInterop": true,          // Permite a importação de módulos CommonJS de maneira mais compatível com o ES6
    "skipLibCheck": true,             // Ignora a verificação de tipos em arquivos de declaração de bibliotecas, melhorando a performance
    "forceConsistentCasingInFileNames": true, // Garante que os nomes dos arquivos sejam sensíveis a maiúsculas e minúsculas
    "moduleResolution": "node",       // Permite a resolução de módulos compatível com Node.js
    "resolveJsonModule": true,        // Permite importar arquivos `.json` diretamente
    "isolatedModules": true,          // Garante que cada arquivo possa ser compilado de forma isolada
    "noImplicitAny": true,            // Garante que variáveis não tenham o tipo `any` implicitamente
    "downlevelIteration": true        // Garante suporte a iteração em objetos como Map e Set em versões anteriores do ECMAScript
  },
  "include": [
    "src/**/*"                        // Inclui todos os arquivos TypeScript dentro do diretório 'src'
  ],
  "exclude": [
    "node_modules",                   // Exclui o diretório node_modules da compilação
    "dist"                             // Exclui o diretório de saída 'dist' da compilação
  ]
}

{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}